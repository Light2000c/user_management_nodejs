            <input type="text" class="form-control" name="last_name" value="{{ this.last_name}}" id="floatingInput" placeholder="Last Name">
            <label for="floatingInput">Last Name</label>
        </div>
    </div>

    <div class="col-6">
        <div class="form-floating mb-3">
            <input type="email" class="form-control" name="email" value="{{ this.email}}" id="floatingInput" placeholder="example@gmail.com">
